<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <EditText
        android:id="@+id/task_edit_text"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weight_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="8dp"
        android:text="@string/weight_view"
        android:textSize="10pt"
        app:layout_constraintStart_toEndOf="@+id/task_edit_text"
        app:layout_constraintTop_toTopOf="@+id/task_edit_text" />

    <EditText
        android:id="@+id/task_weight_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/weight_view"
        app:layout_constraintTop_toTopOf="@+id/weight_view" />


    <Button
        android:id="@+id/delete_button"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:background="@android:drawable/ic_delete"
        android:onClick="onDelete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/team_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>